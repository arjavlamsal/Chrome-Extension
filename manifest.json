{
    "manifest_version": 3,
    "name": "Seymour Seemore",
    "description": "Find anything and everything you're looking for.",
    "version": "0.1.0",
    "side_panel": { 
        "default_path": "app/index.html"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "sidePanel",
        "tabs"
    ],
    "action": {
        "default_title": "Click to open panel"
    }
}
